<% if  @worker.errors.any? %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h2 class="panel-title">
						 <%= pluralize(@worker.errors.count, "error") %>	
						 prohibited this worker from being saved:
					</h2>
					<div class="panel-body">
						<ul>
							<% @worker.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@worker, :html => {class: "form-horizontal", role: "form"}) do |g| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :name %>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :name, class: "form-control", placeholder: "Enter Your Name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :cnic %>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :cnic, class: "form-control", placeholder: "Enter your CNIC Number", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :phone %>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :phone, class: "form-control", placeholder: "Enter your Phone Number", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :city %>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :city, class: "form-control", placeholder: "Enter Your City Name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :category%>
				</div>
				<div class="col-sm-8">
					<%= g.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= g.label :address%> <br>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :address,rows: 10, class: "form-control", placeholder: "Enter Your Full Address", autofocus: true%>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2  col-sm-10">
					<%= g.submit class: "btn btn-primary btn-lg"%>
				</div>
			</div>	
			
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel and Back to  Home", root_path %> ]
		</div>
	</div>
</div>