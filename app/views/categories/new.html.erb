<div class="row">
	<div class="col-xs-12">
		<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |g| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :name %>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :name, class: "form-control", placeholder: "Enter Your Name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2  col-sm-10">
					<%= g.submit class: "btn btn-primary btn-lg"%>
				</div>
			</div>
		<% end %>
	</div>
</div>